{
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[python]": {
    // "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "diffEditor.ignoreTrimWhitespace": false,
  "editor.cursorBlinking": "solid",
  "editor.cursorSmoothCaretAnimation": "off",
  "editor.cursorSurroundingLines": 6,
  "editor.cursorSurroundingLinesStyle": "default",
  "editor.detectIndentation": true,
  // "editor.fontFamily": "VictorMono Nerd Font",
  "editor.fontFamily": "JetBrainsMono Nerd Font Propo",
  // "editor.fontFamily": "SFMono Nerd Font",
  // "editor.fontFamily": "Hack Nerd Nerd Font",
  // "editor.fontFamily": "Fira Code, Menlo, Monaco, 'Courier New', monospace ",
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": [
          //following will be in italic
          "comment",
          "entity.name.type.class", //class names
          "constant", //String, Number, Boolean…, this, super
          "storage.modifier", //static keyword
          "storage.type.class.js", //class keyword
          "keyword" //import, export, return…
        ],
        "settings": {
          "fontStyle": "italic"
        }
      },
      {
        "scope": [
          //following will be excluded from italics (VSCode has some defaults for italics)

          "invalid",
          "keyword.operator",
          "constant.numeric.css",
          "keyword.other.unit.px.css",
          "constant.numeric.decimal.js",
          "constant.numeric.json"
        ],
        "settings": {
          "fontStyle": ""
        }
      }
    ]
  },
  "editor.fontLigatures": true,
  "editor.fontSize": 17,
  "editor.lineHeight": 25 ,
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.guides.bracketPairs": true,
  "editor.inlineSuggest.enabled": true,
  "editor.lineNumbers": "relative",
  "editor.minimap.enabled": false,
  "editor.guides.indentation": true,
  "editor.guides.highlightActiveIndentation": true,
  "editor.occurrencesHighlight": "off",
  "editor.renderLineHighlight": "line",
  "editor.selectionHighlight": false,
  "editor.stickyScroll.enabled": false,
  "editor.suggest.insertMode": "replace",
  "editor.renderWhitespace": "trailing",
  "editor.tabSize": 2,
  "editor.wordSeparators": "`~!@#$%^&*()=+[{]}\\|;:'\",.<>/?",
  "editor.wordWrap": "on",
  "explorer.autoReveal": true,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "extensions.experimental.affinity": {
    "vscodevim.vim": 1
  },
  "extensions.ignoreRecommendations": false,
  "files.associations": {
    "*.config": "groovy"
  },
  "files.exclude": {
    // "**/node_modules": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/.git": true
  },
  "files.simpleDialog.enable": true,
  "git.confirmSync": false,
  "git.openRepositoryInParentFolders": "never",
  "github.copilot.enable": {
    "quarto": false,
    // "*": true,
    "markdown": true,
    "plaintext": false,
    "scminput": false
  },
  "typescript.preferences.importModuleSpecifier": "non-relative",
  "interactiveWindow.executeWithShiftEnter": false,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "jupyter.askForKernelRestart": false,
  "jupyter.interactiveWindow.textEditor.executeSelection": true,
  "notebook.formatOnCellExecution": true,
  "notebook.formatOnSave.enabled": true,
  "notebook.lineNumbers": "on",
  "notebook.output.textLineLimit": 10,
  "quarto.render.previewReveal": false,
  "quarto.render.previewType": "none",
  "quarto.render.renderOnSaveShiny": false,
  "quarto.usePipQuarto": false,
  "quarto.visualEditor.spelling": false,
  "security.workspace.trust.untrustedFiles": "open",
  "svelte.enable-ts-plugin": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "vim.autoSwitchInputMethod.defaultIM": "com.apple.keylayout.US",
  "vim.autoSwitchInputMethod.enable": true,
  "vim.autoSwitchInputMethod.obtainIMCmd": "/usr/local/bin/im-select",
  "vim.autoSwitchInputMethod.switchIMCmd": "/usr/local/bin/im-select {im}",
  "vim.easymotion": true,
  "vim.foldfix": true,
  "vim.highlightedyank.color": "#a9dc7660",
  "vim.highlightedyank.duration": 250,
  "vim.highlightedyank.enable": true,
  "vim.hlsearch": true,
  "vim.useCtrlKeys": true,
  "vim.changeWordIncludesWhitespace": false,
  "vim.leader": "<space>",
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "k"],
      "after": ["<Esc>"]
    },
    {
      // show reg
      "before": ["<C-i>"],
      "after": [],
      "commands": [":reg"]
    }
  ],
  "vim.normalModeKeyBindings": [],
  "vim.normalModeKeyBindingsNonRecursive": [
    // {
    //   "before": ["\n"],
    //   "commands": ["vim.showQuickpickCmdLine"]
    // },
    // groupEditor or windows movement
    {
      "before": ["<C-u>"], // half page then foues
      "after": ["H", "z", "z"]
    },
    {
      "before": ["<C-d>"],
      "after": ["L", "z", "z"]
    },
    {
      "before": ["C-h"], // windowns move
      "after": ["C-w", "h"]
    },
    {
      "before": ["C-j"],
      "after": ["C-w", "j"]
    },
    {
      "before": ["C-k"],
      "after": ["C-w", "k"]
    },
    {
      "before": ["C-l"],
      "after": ["C-w", "l"]
    },
    // jupyter
    {
      "before": ["C-["],
      "commands": ["jupyter.gotoPrevCellInFile"]
    },
    {
      "before": ["C-]"],
      "commands": ["jupyter.gotoNextCellInFile"]
    },
    // bookmark
    {
      "before": ["<leader>", "m"],
      "commands": ["bookmarks.toggle"]
    },
    {
      "before": ["<leader>", "b", "l"],
      "commands": ["bookmarks.list"]
    },
    {
      "before": ["<leader>", "b", "c"],
      "commands": ["bookmarks.clear"]
    },
    {
      "before": ["<leader>", "b", "C"],
      "commands": ["bookmarks.clearFromAllFiles"]
    },
    {
      "before": ["<leader>", "b", "b"],
      "commands": ["bookmarks.listFromAllFiles"]
    },
    // 全部折叠
    {
      "before": ["<leader>", "z", "c"],
      "commands": ["editor.foldAll"]
    },
    // 全部展开 zc
    {
      "before": ["<leader>", "z", "o"],
      "commands": ["editor.unfoldAll"]
    },
    {
      "before": ["leader", "l", "l"],
      "commands": ["turboConsoleLog.displayLogMessage"]
    },
    {
      "before": ["leader", "l", "d"],
      "commands": ["turboConsoleLog.commentAllLogMessages"]
    },
    {
      "before": ["leader", "t"],
      "commands": ["extension.toggleBool"]
    },
    {
      // "0 will always have the content of the latest yank
      "before": ["<leader>", "p"],
      "after": ["\"", "0", "p"]
    },
    {
      "before": ["<C-n>"],
      "commands": [":nohl"]
    },
    // vim whichkey
    {
      "before": ["\\"],
      "commands": ["whichkey.show"]
    },
    {
      "before": ["K"],
      "commands": ["lineBreakInsert"],
      "silent": true
    },
    // fix the u and redo
    {
      "before": ["u"],
      "after": [],
      "commands": ["undo"]
    },
    {
      "before": ["<C-r>"],
      "after": [],
      "commands": ["redo"]
    },
    // vim easymotion

    {
      "before": ["g", "e", " "],
      "after": ["leader", "leader", "s"]
    },
    {
      "before": ["g", "e", "w"],
      "after": ["leader", "leader", "w"]
    },
    {
      "before": ["g", "e", "b"],
      "after": ["leader", "leader", "b"]
    },
    // lsp related staff
    {
      "before": ["g", "h"],
      "commands": ["editor.action.showDefinitionPreviewHover"]
    },
    {
      "before": ["g", "r"],
      "commands": ["editor.action.goToReferences"]
    },
    // {
    //   "before": ["g", "i"],
    //   "commands": ["editor.action.goToImplementation"]
    // },
    {
      "before": ["g", "p"],
      "commands": ["workbench.actions.view.problems"]
    },
    {
      "before": ["g", "d"],
      "commands": ["editor.action.revealDefinition"]
    },
    {
      "before": ["g", "q"],
      "commands": ["editor.action.quickFix"]
    },
    {
      "before": ["<leader>", "f"], // visual line and to to last char, jump
      "after": ["V", "$", "%"]
    },
    {
      "before": ["<leader>", "r"],
      "commands": ["editor.action.rename"]
    },
    {
      "before": ["<leader>", "s", "p"],
      "commands": [
        {
          "command": "workbench.actions.view.problems",
          "when": ["editorTextFocus"]
        }
      ]
    },
    {
      "before": ["<leader>", "s", "b"],
      "commands": [
        {
          "command": "workbench.action.quickOpen",
          "args": "edt ",
          "when": ["editorTextFocus"]
        }
      ]
    },
    {
      "before": ["<leader>", "s", "s"],
      "commands": [
        {
          "command": "workbench.action.quickOpen",
          "args": "@",
          "when": ["editorTextFocus"]
        }
      ]
    }
  ],
  "vim.operatorPendingModeKeyBindingsNonRecursive": [
    {
      "after": ["$"],
      "before": ["L"]
    },
    {
      "after": ["^"],
      "before": ["H"]
    }
